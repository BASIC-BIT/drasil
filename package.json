    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.23.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.28.0"
