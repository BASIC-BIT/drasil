{
  "name": "drasil",
  "version": "1.0.0",
  "description": "A Discord bot that leverages GPT-based analysis and heuristic checks to proactively detect and mitigate spammers and scammers in Discord servers.",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest --testPathPattern=src/__tests__/unit",
    "test:watch": "jest --watch --testPathPattern=src/__tests__/unit",
    "test:coverage": "jest --testPathPattern=src/__tests__/unit --coverage",
    "test:integration": "node scripts/run-integration-tests.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,mjs}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,mjs}\"",
    "check": "npm run lint:fix && npm run build && npm test",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:db:pull": "prisma db pull",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "db:seed": "prisma db seed",
    "db:reset:local": "npx supabase db reset --local && node scripts/create-prisma-user.js && prisma migrate reset && npm run db:seed"
  },
  "keywords": [
    "discord",
    "bot",
    "anti-spam",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.23.0",
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^6.5.0",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "pg": "^8.14.1",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.3",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "inversify": "^7.2.0",
    "openai": "^4.89.0",
    "reflect-metadata": "^0.2.2"
  }
}
