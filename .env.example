# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Prisma Database URL
DATABASE_URL="postgresql://prisma:replace-with-a-strong-password@127.0.0.1:54322/postgres?schema=public"

# Node Environment
NODE_ENV=development

# Password for the dedicated 'prisma' database user (used during local reset)
PRISMA_DB_PASSWORD=replace-with-a-strong-password

# Connection string for the default 'postgres' user (used for prisma migrate reset)
# Assumes standard Supabase local setup
POSTGRES_DB_URL="postgresql://postgres:postgres@127.0.0.1:54322/postgres?schema=public"
